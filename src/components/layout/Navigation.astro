---
export interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

// Navigation links configuration
const navigationLinks = [
  {
    href: '/',
    label: 'Inicio',
    ariaLabel: 'Ir a la página de inicio'
  },
  {
    href: '/servicios',
    label: 'Servicios',
    ariaLabel: 'Ver nuestros servicios médicos'
  },
  {
    href: '/recursos',
    label: 'Recursos',
    ariaLabel: 'Acceder a recursos y artículos'
  }
];

// Helper function to check if link is active
function isActiveLink(href: string, currentPath: string): boolean {
  if (href === '/' && currentPath === '/') return true;
  if (href !== '/' && currentPath.startsWith(href)) return true;
  return false;
}
---

<nav class="navigation relative" role="navigation" aria-label="Navegación principal">
  <!-- Desktop Navigation -->
  <div class="hidden md:flex items-center space-x-8">
    {navigationLinks.map((link) => (
      <a
        href={link.href}
        aria-label={link.ariaLabel}
        class={`
          nav-link
          text-base font-body transition-colors duration-200 hover:text-accent
          ${isActiveLink(link.href, currentPath) 
            ? 'text-accent font-semibold border-b-2 border-accent' 
            : 'text-primary-dark hover:text-accent'
          }
        `}
      >
        {link.label}
      </a>
    ))}
  </div>

  <!-- Mobile Navigation Button -->
  <div class="md:hidden">
    <input type="checkbox" id="mobile-menu-checkbox" class="hidden" />
    <label 
      for="mobile-menu-checkbox" 
      class="flex items-center justify-center w-10 h-10 rounded-md text-primary-dark hover:text-accent hover:bg-light/20 transition-colors duration-200 cursor-pointer"
      aria-label="Abrir menú de navegación"
    >
      <!-- Hamburger Icon -->
      <svg
        class="hamburger-icon w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </label>

    <!-- Mobile Navigation Menu -->
    <div class="mobile-menu-container">
      <div class="mobile-menu-content bg-white shadow-lg border border-light/30 rounded-lg mt-2 py-4">
        {navigationLinks.map((link) => (
          <a
            href={link.href}
            class={`
              mobile-nav-link
              block px-6 py-3 text-lg font-body transition-colors duration-200 hover:bg-light/10
              ${isActiveLink(link.href, currentPath)
                ? 'text-accent bg-light/20 font-semibold'
                : 'text-primary-dark hover:text-accent'
              }
            `}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<style>
  /* Navigation styles */
  .navigation {
    position: relative;
  }

  /* Focus styles for accessibility */
  .nav-link:focus,
  .mobile-nav-link:focus {
    outline: 2px solid #03A63C;
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Hover effects */
  .nav-link {
    position: relative;
  }

  .nav-link:not(.active):hover::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #03A63C;
    transform: scaleX(0);
    transition: transform 0.2s ease-in-out;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  /* Mobile menu using CSS only */
  #mobile-menu-checkbox {
    display: none;
  }

  .mobile-menu-container {
    position: absolute;
    top: 100%;
    left: -200px;
    right: -20px;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease-in-out;
    pointer-events: none;
    width: 250px;
    min-width: 200px;
  }

  /* Show mobile menu when checkbox is checked */
  #mobile-menu-checkbox:checked ~ .mobile-menu-container {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  /* Mobile menu content styling */
  .mobile-menu-content {
    background: white;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    margin-top: 8px;
    overflow: hidden;
  }

  /* Mobile nav links */
  .mobile-nav-link {
    display: block;
    padding: 16px 24px;
    text-decoration: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    white-space: nowrap;
    font-size: 16px;
    font-weight: 500;
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }

  .mobile-nav-link:hover {
    background-color: rgba(3, 166, 60, 0.1);
  }

  /* Hide mobile menu on desktop */
  @media (min-width: 768px) {
    .mobile-menu-container {
      display: none !important;
    }
  }

  /* Ensure mobile menu button is clickable */
  label[for="mobile-menu-checkbox"] {
    cursor: pointer;
    -webkit-tap-highlight-color: transparent;
    user-select: none;
  }

  label[for="mobile-menu-checkbox"]:hover {
    transform: scale(1.05);
  }

  /* Close menu when clicking on a link */
  .mobile-nav-link {
    position: relative;
  }

  .mobile-nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }
</style>

<script>
  // Simple script to close mobile menu when clicking on a link
  document.addEventListener('DOMContentLoaded', function() {
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
    const checkbox = document.getElementById('mobile-menu-checkbox');
    
    mobileNavLinks.forEach(function(link) {
      link.addEventListener('click', function() {
        // Uncheck the checkbox to close the menu
        if (checkbox) {
          checkbox.checked = false;
        }
      });
    });
  });
</script>