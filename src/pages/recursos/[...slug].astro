---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import { SITE_CONFIG } from '../../utils/constants';
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const blogEntries = await getCollection('blog');
  
  return blogEntries
    .filter(entry => !entry.data.draft)
    .map(entry => ({
      params: { slug: entry.slug },
      props: { entry }
    }));
};

const { entry } = Astro.props;
const { Content } = await entry.render();

// Format date function
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}

// Category labels
const categoryLabels = {
  'geriatria': 'Geriatría',
  'gerontologia': 'Gerontología',
  'nutricion': 'Nutrición',
  'ejercicio': 'Ejercicio',
  'salud-mental': 'Salud Mental'
};

// Get random articles (excluding current article)
const allPosts = await getCollection('blog');
const otherPosts = allPosts
  .filter(post => !post.data.draft && post.slug !== entry.slug)
  .sort(() => Math.random() - 0.5) // Randomize
  .slice(0, 3); // Take first 3

// Social sharing URLs
const currentUrl = `${SITE_CONFIG.url || 'https://your-site.com'}/recursos/${entry.slug}`;
const shareText = `${entry.data.title} - ${entry.data.description}`;
const shareUrls = {
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`,
  twitter: `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(shareText)}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`,
  whatsapp: `https://wa.me/?text=${encodeURIComponent(`${shareText} ${currentUrl}`)}`
};
---

<BaseLayout 
  title={`${entry.data.title} - ${SITE_CONFIG.title}`}
  description={entry.data.description}
  image={entry.data.featuredImage}
  type="article"
  publishDate={entry.data.publishDate}
  author={entry.data.author}
>
  <!-- Header -->
  <Header currentPath="/recursos" />

  <!-- Main Content -->
  <main class="flex-1">
    <!-- Article Header -->
    <article class="article-page">
      <!-- Featured Image / Gallery -->
      <section class="article-hero relative">
        {entry.data.gallery && entry.data.gallery.length > 1 ? (
          <!-- Image Gallery Carousel -->
          <div class="gallery-container relative bg-gray-100">
            <div class="aspect-video lg:aspect-[21/9] overflow-hidden">
              <!-- Gallery Images -->
              <div class="gallery-track flex h-full" id="gallery-track" data-total={entry.data.gallery.length}>
                {entry.data.gallery.map((image, index) => (
                  <div class="gallery-slide flex-shrink-0 w-full h-full flex items-center justify-center bg-gray-100" data-index={index}>
                    <img
                      src={image}
                      alt={`${entry.data.title} - Imagen ${index + 1}`}
                      class="max-w-full max-h-full object-contain"
                      loading={index === 0 ? "eager" : "lazy"}
                    />
                  </div>
                ))}
              </div>
              
              <!-- Navigation Buttons -->
              <button
                class="gallery-btn gallery-btn-prev absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/90 hover:bg-white text-gray-800 rounded-full p-3 shadow-lg transition-all duration-200 hover:scale-110 disabled:opacity-50 disabled:cursor-not-allowed z-10"
                aria-label="Imagen anterior"
                id="gallery-prev"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              </button>
              
              <button
                class="gallery-btn gallery-btn-next absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/90 hover:bg-white text-gray-800 rounded-full p-3 shadow-lg transition-all duration-200 hover:scale-110 disabled:opacity-50 disabled:cursor-not-allowed z-10"
                aria-label="Siguiente imagen"
                id="gallery-next"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
              
              <!-- Indicators -->
              <div class="gallery-indicators absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2 z-10">
                {entry.data.gallery.map((_, index) => (
                  <button
                    class="gallery-indicator w-3 h-3 rounded-full bg-white/60 hover:bg-white/80 transition-colors duration-200"
                    data-index={index}
                    aria-label={`Ir a imagen ${index + 1}`}
                  />
                ))}
              </div>
              
              <!-- Image Counter -->
              <div class="gallery-counter absolute top-4 right-4 bg-black/50 text-white px-3 py-1 rounded-full text-sm z-10">
                <span id="current-image">1</span> / {entry.data.gallery.length}
              </div>
            </div>
          </div>
        ) : (
          <!-- Single Featured Image -->
          <div class="single-image-container aspect-video lg:aspect-[21/9] overflow-hidden bg-gray-100 flex items-center justify-center">
            <img
              src={entry.data.featuredImage || '/images/blog/default-article.jpg'}
              alt={entry.data.title}
              class="max-w-full max-h-full object-contain"
              loading="eager"
            />
          </div>
        )}
        
        <!-- Article Header Overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent flex items-end">
          <div class="container mx-auto px-4 sm:px-6 lg:px-8 pb-8">
            <div class="max-w-4xl mx-auto">
              <!-- Category Badge -->
              <div class="mb-4">
                <span class={`inline-block px-4 py-2 text-sm font-semibold rounded-full ${
                  entry.data.category === 'geriatria' ? 'bg-primary text-white' :
                  entry.data.category === 'nutricion' ? 'bg-green-600 text-white' :
                  entry.data.category === 'ejercicio' ? 'bg-blue-600 text-white' :
                  entry.data.category === 'salud-mental' ? 'bg-purple-600 text-white' :
                  'bg-gray-600 text-white'
                }`}>
                  {categoryLabels[entry.data.category] || entry.data.category}
                </span>
              </div>
              
              <!-- Title -->
              <h1 class="text-3xl lg:text-5xl font-heading font-extrabold text-white mb-4 leading-tight">
                {entry.data.title}
              </h1>
              
              <!-- Meta Information -->
              <div class="flex flex-wrap items-center gap-4 text-white/90">
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0V6a2 2 0 012-2h4a2 2 0 012 2v1m-6 0h8m-9 0a1 1 0 00-1 1v10a1 1 0 001 1h10a1 1 0 001-1V8a1 1 0 00-1-1H7z"/>
                  </svg>
                  {formatDate(entry.data.publishDate)}
                </div>
                
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                  {entry.data.author}
                </div>
                
                {entry.data.tags && entry.data.tags.length > 0 && (
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                    </svg>
                    {entry.data.tags.slice(0, 3).join(', ')}
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Article Content -->
      <section class="article-content py-16 bg-white">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
              
              <!-- Main Content -->
              <div class="lg:col-span-3">
                <!-- Article Description -->
                {entry.data.excerpt && (
                  <div class="article-excerpt bg-primary-light/10 rounded-2xl p-6 mb-8">
                    <p class="text-lg font-body text-gray-700 leading-relaxed">
                      {entry.data.excerpt}
                    </p>
                  </div>
                )}
                
                <!-- Article Body -->
                <div class="prose prose-lg max-w-none">
                  <Content />
                </div>
                
                <!-- Other Articles Section -->
                <div class="other-articles mt-12 pt-8 border-t border-gray-200">
                  <h3 class="text-2xl font-heading font-bold text-primary-dark mb-6 text-center">
                    Otros Artículos
                  </h3>
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {otherPosts.map((post) => (
                      <article class="article-card bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                        <!-- Featured Image -->
                        <div class="article-image aspect-video overflow-hidden bg-gray-100 flex items-center justify-center">
                          <img
                            src={post.data.featuredImage || '/images/blog/default-article.jpg'}
                            alt={post.data.title}
                            class="max-w-full max-h-full object-contain transition-transform duration-300 hover:scale-105"
                            loading="lazy"
                          />
                        </div>
                        
                        <!-- Article Content -->
                        <div class="article-content p-6">
                          <!-- Category Badge -->
                          <div class="mb-3">
                            <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full ${
                              post.data.category === 'gerontologia' ? 'bg-primary/10 text-primary' :
                              post.data.category === 'nutricion' ? 'bg-green-100 text-green-800' :
                              post.data.category === 'ejercicio' ? 'bg-blue-100 text-blue-800' :
                              post.data.category === 'salud-mental' ? 'bg-purple-100 text-purple-800' :
                              'bg-gray-100 text-gray-800'
                            }`}>
                              {categoryLabels[post.data.category] || post.data.category}
                            </span>
                          </div>
                          
                          <!-- Title -->
                          <h4 class="text-xl font-heading font-bold text-primary-dark mb-3 line-clamp-2">
                            <a 
                              href={`/recursos/${post.slug}`}
                              class="hover:text-primary transition-colors duration-200"
                            >
                              {post.data.title}
                            </a>
                          </h4>
                          
                          <!-- Date -->
                          <div class="text-sm text-gray-500 mb-3">
                            {formatDate(post.data.publishDate)}
                          </div>
                          
                          <!-- Excerpt -->
                          <p class="text-gray-600 font-body mb-4 line-clamp-3">
                            {post.data.excerpt || post.data.description}
                          </p>
                          
                          <!-- Read More Link -->
                          <a 
                            href={`/recursos/${post.slug}`}
                            class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors duration-200"
                          >
                            Leer más
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                          </a>
                        </div>
                      </article>
                    ))}
                  </div>
                  
                  <!-- View All Articles Button -->
                  <div class="text-center mt-8">
                    <a
                      href="/recursos"
                      class="inline-flex items-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-colors duration-200"
                    >
                      Ver Todos los Artículos
                      <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </div>
                </div>
                
                <!-- Tags -->
                {entry.data.tags && entry.data.tags.length > 0 && (
                  <div class="article-tags mt-12 pt-8 border-t border-gray-200">
                    <h3 class="text-lg font-heading font-bold text-primary-dark mb-4">
                      Etiquetas
                    </h3>
                    <div class="flex flex-wrap gap-2">
                      {entry.data.tags.map(tag => (
                        <span class="inline-block px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
              </div>
              
              <!-- Sidebar -->
              <div class="lg:col-span-1">
                <div class="sticky top-8 space-y-8">
                  
                  <!-- Share Buttons -->
                  <div class="share-section bg-gray-50 rounded-2xl p-6">
                    <h3 class="text-lg font-heading font-bold text-primary-dark mb-4">
                      Compartir
                    </h3>
                    <div class="space-y-3">
                      <a
                        href={shareUrls.whatsapp}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center w-full px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors duration-200"
                      >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                        </svg>
                        WhatsApp
                      </a>
                      
                      <a
                        href={shareUrls.facebook}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200"
                      >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                        Facebook
                      </a>
                      
                      <a
                        href={shareUrls.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center w-full px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors duration-200"
                      >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                        LinkedIn
                      </a>
                    </div>
                  </div>
                  
                  <!-- Contact CTA -->
                  <div class="contact-cta bg-primary-light/10 rounded-2xl p-6">
                    <h3 class="text-lg font-heading font-bold text-primary-dark mb-3">
                      ¿Tienes preguntas?
                    </h3>
                    <p class="text-sm text-gray-600 mb-4">
                      Contáctame para resolver tus dudas sobre gerontología
                    </p>
                    <a
                      href={`https://wa.me/${SITE_CONFIG.contact.whatsapp.replace(/[^0-9]/g, '')}?text=Hola, leí el artículo "${entry.data.title}" y me gustaría hacer una consulta`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn-primary w-full text-center"
                    >
                      Contactar
                    </a>
                  </div>
                  
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </section>

      <!-- Related Articles -->
      {otherPosts.length > 0 && (
        <section class="related-articles py-16 bg-gray-50">
          <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-6xl mx-auto">
              <h2 class="text-3xl font-heading font-extrabold text-primary-dark mb-8 text-center">
                Más Artículos
              </h2>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {otherPosts.map((post) => (
                  <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    <div class="aspect-video overflow-hidden bg-gray-100 flex items-center justify-center">
                      <img
                        src={post.data.featuredImage || '/images/blog/default-article.jpg'}
                        alt={post.data.title}
                        class="max-w-full max-h-full object-contain hover:scale-105 transition-transform duration-300"
                        loading="lazy"
                      />
                    </div>
                    
                    <div class="p-6">
                      <h3 class="text-lg font-heading font-bold text-primary-dark mb-2 line-clamp-2">
                        <a 
                          href={`/recursos/${post.slug}`}
                          class="hover:text-primary transition-colors duration-200"
                        >
                          {post.data.title}
                        </a>
                      </h3>
                      
                      <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                        {post.data.excerpt || post.data.description}
                      </p>
                      
                      <a 
                        href={`/recursos/${post.slug}`}
                        class="text-primary font-semibold text-sm hover:text-primary-dark transition-colors duration-200"
                      >
                        Leer más →
                      </a>
                    </div>
                  </article>
                ))}
              </div>
            </div>
          </div>
        </section>
      )}

      <!-- Navigation -->
      <section class="article-navigation py-8 bg-white border-t border-gray-200">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto">
            <div class="flex justify-between items-center">
              <a
                href="/recursos"
                class="inline-flex items-center text-primary hover:text-primary-dark transition-colors duration-200"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                Volver a Recursos
              </a>
            </div>
          </div>
        </div>
      </section>
    </article>
  </main>
</BaseLayout>

<style>
  /* Prose styles for article content */
  .prose {
    @apply text-gray-700 leading-relaxed;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    @apply font-heading font-bold text-primary-dark mt-8 mb-4;
  }
  
  .prose h1 { @apply text-3xl; }
  .prose h2 { @apply text-2xl; }
  .prose h3 { @apply text-xl; }
  .prose h4 { @apply text-lg; }
  
  .prose p {
    @apply mb-6;
  }
  
  .prose ul, .prose ol {
    @apply mb-6 pl-6;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose blockquote {
    @apply border-l-4 border-primary pl-6 italic text-gray-600 my-6;
  }
  
  .prose strong {
    @apply font-bold text-primary-dark;
  }
  
  .prose a {
    @apply text-primary hover:text-primary-dark underline;
  }
  
  .prose img {
    @apply rounded-lg shadow-md my-8;
  }
  
  /* Line clamp utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Article cards */
  .article-card {
    transition: all 0.3s ease;
  }
  
  .article-card:hover {
    transform: translateY(-4px);
  }
  
  /* Gallery styles */
  .gallery-container {
    position: relative;
  }
  
  .gallery-track {
    display: flex;
    height: 100%;
    transition: transform 0.3s ease-in-out;
    transform: translateX(0%);
  }
  
  .gallery-slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .gallery-btn {
    z-index: 20;
    pointer-events: auto;
  }
  
  .gallery-btn:hover {
    transform: translateY(-50%) scale(1.1);
  }
  
  .gallery-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: translateY(-50%) scale(1);
  }
  
  .gallery-indicator {
    cursor: pointer;
    z-index: 20;
    pointer-events: auto;
  }
  
  .gallery-indicator.active {
    background-color: white !important;
  }
  
  .gallery-counter {
    z-index: 20;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .gallery-btn {
      padding: 8px;
    }
    
    .gallery-btn svg {
      width: 16px;
      height: 16px;
    }
    
    .gallery-indicators {
      bottom: 12px;
    }
    
    .gallery-indicator {
      width: 8px;
      height: 8px;
    }
    
    .gallery-counter {
      top: 12px;
      right: 12px;
      font-size: 12px;
    }
  }
</style>

<script>
  // Gallery functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Get elements
    const track = document.getElementById('gallery-track');
    const prevBtn = document.getElementById('gallery-prev');
    const nextBtn = document.getElementById('gallery-next');
    const indicators = document.querySelectorAll('.gallery-indicator');
    const currentImageSpan = document.getElementById('current-image');
    
    // Check if we have a gallery
    if (!track || !prevBtn || !nextBtn || indicators.length === 0) {
      return;
    }
    
    // Get total images
    const totalImages = parseInt(track.dataset.total) || indicators.length;
    
    if (totalImages <= 1) {
      return;
    }
    
    // State
    let currentIndex = 0;
    
    // Update gallery function
    function updateGallery() {
      // Move track
      const translateX = -currentIndex * 100;
      track.style.transform = `translateX(${translateX}%)`;
      
      // Update indicators
      indicators.forEach((indicator, index) => {
        if (index === currentIndex) {
          indicator.classList.add('active');
          indicator.style.backgroundColor = 'white';
        } else {
          indicator.classList.remove('active');
          indicator.style.backgroundColor = 'rgba(255, 255, 255, 0.6)';
        }
      });
      
      // Update counter
      if (currentImageSpan) {
        currentImageSpan.textContent = (currentIndex + 1).toString();
      }
      
      // Update button states
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex === totalImages - 1;
    }
    
    // Event listeners
    prevBtn.addEventListener('click', function(e) {
      e.preventDefault();
      if (currentIndex > 0) {
        currentIndex--;
        updateGallery();
      }
    });
    
    nextBtn.addEventListener('click', function(e) {
      e.preventDefault();
      if (currentIndex < totalImages - 1) {
        currentIndex++;
        updateGallery();
      }
    });
    
    // Indicator clicks
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', function(e) {
        e.preventDefault();
        currentIndex = index;
        updateGallery();
      });
    });
    
    // Keyboard navigation
    document.addEventListener('keydown', function(e) {
      if (e.key === 'ArrowLeft' && currentIndex > 0) {
        currentIndex--;
        updateGallery();
      } else if (e.key === 'ArrowRight' && currentIndex < totalImages - 1) {
        currentIndex++;
        updateGallery();
      }
    });
    
    // Touch support
    let startX = 0;
    let endX = 0;
    
    track.addEventListener('touchstart', function(e) {
      startX = e.touches[0].clientX;
    });
    
    track.addEventListener('touchend', function(e) {
      endX = e.changedTouches[0].clientX;
      const diff = startX - endX;
      
      if (Math.abs(diff) > 50) {
        if (diff > 0 && currentIndex < totalImages - 1) {
          currentIndex++;
          updateGallery();
        } else if (diff < 0 && currentIndex > 0) {
          currentIndex--;
          updateGallery();
        }
      }
    });
    
    // Initialize gallery
    updateGallery();
  });
</script>
