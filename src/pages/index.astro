---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import { SITE_CONFIG } from '../utils/constants';
import { getCollection } from 'astro:content';

// Get latest blog posts
const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

// Get all services
const allServices = await getCollection('services');
const activeServices = allServices
  .filter(service => service.data.active)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

// Category labels
const categoryLabels = {
  'gerontologia': 'Gerontología',
  'familias-cuidadores': 'Familias y Cuidadores',
  'demencias-alzheimer': 'Demencias y Alzheimer',
  'salud-bienestar': 'Salud y Bienestar',
  'envejecimiento-sociedad': 'Envejecimiento y Sociedad',
  'recursos-herramientas': 'Recursos y Herramientas',
  'experiencias-reflexiones': 'Experiencias y Reflexiones',
  // Categorías antiguas para compatibilidad
  'nutricion': 'Familias y Cuidadores',
  'ejercicio': 'Demencias y Alzheimer',
  'salud-mental': 'Salud y Bienestar'
};

// Service icons mapping
const serviceIcons = {
  'check-circle': 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  'clipboard-list': 'M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2',
  'users': 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  'lightbulb': 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  'office-building': 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
  'megaphone': 'M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z'
};

// Format date function
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<BaseLayout 
  title={SITE_CONFIG.title}
  description={SITE_CONFIG.description}
>
  <!-- Header -->
  <Header currentPath="/" />

  <!-- Main Content -->
  <main class="flex-1">
    <!-- Hero Section -->
    <section class="hero-section bg-gradient-to-br from-primary-light/20 to-white py-16 lg:py-24">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            
            <!-- Image Column (First on mobile, second on desktop) -->
            <div class="hero-image order-1 lg:order-2">
              <div class="relative">
                <div class="aspect-square rounded-2xl overflow-hidden shadow-2xl bg-gradient-to-br from-primary-light/20 to-primary/10">
                  <img
                    src={SITE_CONFIG.author.photo}
                    alt={`Foto de ${SITE_CONFIG.author.name}, ${SITE_CONFIG.author.title}`}
                    class="w-full h-full object-cover"
                    loading="eager"
                  />
                </div>
                
                <!-- Decorative elements -->
                <div class="absolute -top-4 -right-4 w-24 h-24 bg-primary/10 rounded-full blur-xl"></div>
                <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-accent/10 rounded-full blur-xl"></div>
              </div>
            </div>
            
            <!-- Content Column (Second on mobile, first on desktop) -->
            <div class="hero-content order-2 lg:order-1">
              <h1 class="text-4xl lg:text-5xl xl:text-6xl font-heading font-extrabold text-primary-dark mb-6 leading-tight">
                {SITE_CONFIG.author.name}
              </h1>
              
              <h2 class="text-xl lg:text-2xl font-body text-primary mb-8">
                {SITE_CONFIG.author.title}
              </h2>
              
              <p class="text-lg font-body text-gray-700 mb-8 leading-relaxed">
                {SITE_CONFIG.description}
              </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4">
                <a
                  href={`https://wa.me/${SITE_CONFIG.contact.whatsapp.replace(/[^0-9]/g, '')}?text=Hola, me gustaría agendar una consulta gerontológica`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-primary inline-flex items-center justify-center"
                >
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                  </svg>
                  Agendar Consulta
                </a>
                
                <a
                  href="/servicios"
                  class="btn-outline inline-flex items-center justify-center"
                >
                  Ver Servicios
                </a>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </section>

    <!-- Services Preview Section -->
    <section class="services-preview py-16 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl lg:text-4xl font-heading font-extrabold text-primary-dark mb-4">
            Servicios Especializados
          </h2>
          <p class="text-lg font-body text-gray-600">
            Atención integral para el bienestar y calidad de vida de las personas mayores
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Dynamic Service Cards -->
          {activeServices.map((service) => (
            <div class="card-professional text-center">
              <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={serviceIcons[service.data.icon] || serviceIcons['check-circle']}/>
                </svg>
              </div>
              <h3 class="text-xl font-heading font-bold text-primary-dark mb-2">{service.data.title}</h3>
              <p class="font-body text-gray-600">{service.data.description}</p>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/servicios" class="btn-primary">
            Ver Todos los Servicios
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section class="about-section py-16 bg-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl lg:text-4xl font-heading font-extrabold text-primary-dark mb-4">
              Sobre Mí
            </h2>
          </div>
          
          <div class="prose prose-lg mx-auto">
            <p class="text-lg font-body text-gray-700 leading-relaxed">
              {SITE_CONFIG.author.bio}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Articles Section -->
    {latestPosts.length > 0 && (
      <section class="latest-articles py-16 bg-gray-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
              <h2 class="text-3xl lg:text-4xl font-heading font-extrabold text-primary-dark mb-4">
                Últimas Publicaciones
              </h2>
              <p class="text-lg font-body text-gray-600">
                Mantente informado con los artículos más recientes sobre gerontología y bienestar
              </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {latestPosts.map((post) => (
                <article class="article-card bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                  <!-- Featured Image -->
                  <div class="article-image aspect-video overflow-hidden bg-gray-100 flex items-center justify-center">
                    <img
                      src={post.data.featuredImage || '/images/blog/default-article.jpg'}
                      alt={post.data.title}
                      class="max-w-full max-h-full object-contain transition-transform duration-300 hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                  
                  <!-- Article Content -->
                  <div class="article-content p-6">
                    <!-- Category Badge -->
                    <div class="mb-3">
                      <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full ${
                        post.data.category === 'gerontologia' ? 'bg-primary/10 text-primary' :
                        post.data.category === 'familias-cuidadores' ? 'bg-green-100 text-green-800' :
                        post.data.category === 'demencias-alzheimer' ? 'bg-blue-100 text-blue-800' :
                        post.data.category === 'salud-bienestar' ? 'bg-purple-100 text-purple-800' :
                        post.data.category === 'envejecimiento-sociedad' ? 'bg-orange-100 text-orange-800' :
                        post.data.category === 'recursos-herramientas' ? 'bg-teal-100 text-teal-800' :
                        post.data.category === 'experiencias-reflexiones' ? 'bg-pink-100 text-pink-800' :
                        // Categorías antiguas
                        post.data.category === 'nutricion' ? 'bg-green-100 text-green-800' :
                        post.data.category === 'ejercicio' ? 'bg-blue-100 text-blue-800' :
                        post.data.category === 'salud-mental' ? 'bg-purple-100 text-purple-800' :
                        'bg-gray-100 text-gray-800'
                      }`}>
                        {categoryLabels[post.data.category] || post.data.category}
                      </span>
                    </div>
                    
                    <!-- Title -->
                    <h3 class="text-xl font-heading font-bold text-primary-dark mb-3 line-clamp-2">
                      <a 
                        href={`/recursos/${post.slug}`}
                        class="hover:text-primary transition-colors duration-200"
                      >
                        {post.data.title}
                      </a>
                    </h3>
                    
                    <!-- Date -->
                    <div class="text-sm text-gray-500 mb-3">
                      {formatDate(post.data.publishDate)}
                    </div>
                    
                    <!-- Excerpt -->
                    <p class="text-gray-600 font-body mb-4 line-clamp-3">
                      {post.data.excerpt || post.data.description}
                    </p>
                    
                    <!-- Read More Link -->
                    <a 
                      href={`/recursos/${post.slug}`}
                      class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors duration-200"
                    >
                      Leer más
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </div>
                </article>
              ))}
            </div>
            
            <!-- View All Articles Button -->
            <div class="text-center mt-12">
              <a href="/recursos" class="btn-primary">
                Ver Todos los Artículos
              </a>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Contact Section -->
    <section class="contact-section py-16 bg-gradient-to-br from-primary-light/10 to-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl lg:text-4xl font-heading font-extrabold text-primary-dark mb-4">
            ¿Listo para comenzar?
          </h2>
          <p class="text-lg font-body text-gray-600 mb-8">
            Agenda tu consulta y comienza tu camino hacia un envejecimiento saludable
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={`https://wa.me/${SITE_CONFIG.contact.whatsapp.replace(/[^0-9]/g, '')}?text=Hola, me gustaría agendar una consulta gerontológica`}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary inline-flex items-center justify-center"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              Contactar por WhatsApp
            </a>
            
            <a
              href={`tel:${SITE_CONFIG.contact.phone}`}
              class="btn-outline inline-flex items-center justify-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              Llamar Ahora
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* Article cards styles */
  .article-card {
    transition: all 0.3s ease;
  }
  
  .article-card:hover {
    transform: translateY(-4px);
  }
  
  /* Line clamp utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Animation for articles */
  .article-card.show {
    animation: fadeInUp 0.5s ease forwards;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
