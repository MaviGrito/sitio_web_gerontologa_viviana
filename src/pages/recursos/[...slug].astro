---
import { getCollection, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import { SITE_CONFIG } from '../../utils/constants';
import { formatDate } from '../../utils/content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

type Props = {
  entry: CollectionEntry<'blog'>;
};

const { entry } = Astro.props;
const { Content } = await entry.render();

// Category labels mapping
const categoryLabels = {
  'gerontologia': 'Gerontología',
  'nutricion': 'Demencias',
  'ejercicio': 'Bienestar del Cuidador',
  'salud-mental': 'Educación'
};

// Get random articles (excluding current article)
const allPosts = await getCollection('blog');
const otherPosts = allPosts
  .filter(post => !post.data.draft && post.slug !== entry.slug)
  .sort(() => Math.random() - 0.5) // Randomize
  .slice(0, 3); // Take first 3

// Social sharing URLs
const currentUrl = `${SITE_CONFIG.url}/recursos/${entry.slug}`;
const shareText = `${entry.data.title} - ${entry.data.description}`;
const shareUrls = {
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(currentUrl)}`,
  twitter: `https://twitter.com/intent/tweet?url=${encodeURIComponent(currentUrl)}&text=${encodeURIComponent(shareText)}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(currentUrl)}`,
  whatsapp: `https://wa.me/?text=${encodeURIComponent(`${shareText} ${currentUrl}`)}`
};
---

<BaseLayout 
  title={`${entry.data.title} - ${SITE_CONFIG.title}`}
  description={entry.data.description}
  image={entry.data.featuredImage}
  url={`/recursos/${entry.slug}`}
  type="article"
  publishDate={entry.data.publishDate}
  author={entry.data.author}
  schemaType="Article"
  schemaData={{
    title: entry.data.title,
    description: entry.data.description,
    image: entry.data.featuredImage,
    publishDate: entry.data.publishDate,
    author: entry.data.author
  }}
>
  <!-- Header -->
  <Header currentPath="/recursos" />

  <!-- Main Content -->
  <main class="flex-1">
    <!-- Article Header -->
    <article class="article-page">
      <!-- Featured Image / Gallery -->
      <section class="article-hero relative">
        {entry.data.gallery && entry.data.gallery.length > 1 ? (
          <!-- Image Gallery Carousel -->
          <div class="gallery-container relative bg-gray-100">
            <div class="aspect-video lg:aspect-[21/9] overflow-hidden">
              <!-- Gallery Images -->
              <div class="gallery-track flex h-full transition-transform duration-300 ease-out" id="gallery-track" data-total={entry.data.gallery.length}>
                {entry.data.gallery.map((image, index) => (
                  <div class="gallery-slide flex-shrink-0 w-full h-full flex items-center justify-center bg-gray-100 cursor-pointer" data-index={index}>
                    <img
                      src={image}
                      alt={`${entry.data.title} - Imagen ${index + 1}`}
                      class="max-w-full max-h-full object-contain gallery-image"
                      loading={index === 0 ? "eager" : "lazy"}
                      data-full-src={image}
                    />
                  </div>
                ))}
              </div>
              
              <!-- Navigation Buttons -->
              <button
                class="gallery-btn gallery-btn-prev absolute left-2 sm:left-4 top-1/2 transform -translate-y-1/2 bg-white/90 hover:bg-white text-gray-800 rounded-full p-2 sm:p-3 shadow-lg transition-all duration-200 hover:scale-110 disabled:opacity-50 disabled:cursor-not-allowed z-10"
                aria-label="Imagen anterior"
                id="gallery-prev"
              >
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
              </button>
              
              <button
                class="gallery-btn gallery-btn-next absolute right-2 sm:right-4 top-1/2 transform -translate-y-1/2 bg-white/90 hover:bg-white text-gray-800 rounded-full p-2 sm:p-3 shadow-lg transition-all duration-200 hover:scale-110 disabled:opacity-50 disabled:cursor-not-allowed z-10"
                aria-label="Siguiente imagen"
                id="gallery-next"
              >
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </button>
              
              <!-- Indicators -->
              <div class="gallery-indicators absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2 z-10">
                {entry.data.gallery.map((_, index) => (
                  <button
                    class="gallery-indicator w-2 h-2 sm:w-3 sm:h-3 rounded-full bg-white/60 hover:bg-white/80 transition-colors duration-200"
                    data-index={index}
                    aria-label={`Ir a imagen ${index + 1}`}
                  />
                ))}
              </div>
              
              <!-- Image Counter -->
              <div class="gallery-counter absolute top-4 right-4 bg-black/50 text-white px-2 py-1 sm:px-3 sm:py-1 rounded-full text-xs sm:text-sm z-10">
                <span id="current-image">1</span> / {entry.data.gallery.length}
              </div>
            </div>

            <!-- Fullscreen Modal -->
            <div id="fullscreen-modal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden flex items-center justify-center">
              <div class="relative w-full h-full flex items-center justify-center p-4">
                <!-- Close Button -->
                <button
                  id="close-fullscreen"
                  class="absolute top-4 right-4 text-white hover:text-gray-300 z-60"
                  aria-label="Cerrar pantalla completa"
                >
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
                
                <!-- Fullscreen Image -->
                <img
                  id="fullscreen-image"
                  src=""
                  alt=""
                  class="max-w-full max-h-full object-contain"
                />
                
                <!-- Navigation in Fullscreen -->
                <button
                  id="fullscreen-prev"
                  class="absolute left-4 top-1/2 transform -translate-y-1/2 text-white hover:text-gray-300 p-2"
                  aria-label="Imagen anterior"
                >
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                  </svg>
                </button>
                
                <button
                  id="fullscreen-next"
                  class="absolute right-4 top-1/2 transform -translate-y-1/2 text-white hover:text-gray-300 p-2"
                  aria-label="Siguiente imagen"
                >
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </button>
                
                <!-- Image Counter in Fullscreen -->
                <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-white bg-black/50 px-3 py-1 rounded-full text-sm">
                  <span id="fullscreen-counter">1</span> / {entry.data.gallery.length}
                </div>
              </div>
            </div>
          </div>
        ) : (
          <!-- Single Featured Image -->
          <div class="single-image-container aspect-video lg:aspect-[21/9] overflow-hidden bg-gray-100 flex items-center justify-center">
            <img
              src={entry.data.featuredImage || '/images/blog/default-article.jpg'}
              alt={entry.data.title}
              class="max-w-full max-h-full object-contain"
              loading="eager"
            />
          </div>
        )}
        
      </section>

      <!-- Article Header Info (moved below image) -->
      <section class="article-header-info py-8 bg-white border-b border-gray-200">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-4xl mx-auto">
            <!-- Category Badge -->
            <div class="mb-4">
              <span class={`inline-block px-3 py-1 text-sm font-semibold rounded-full ${
                entry.data.category === 'gerontologia' ? 'bg-primary/10 text-primary' :
                entry.data.category === 'nutricion' ? 'bg-green-100 text-green-800' :
                entry.data.category === 'ejercicio' ? 'bg-blue-100 text-blue-800' :
                entry.data.category === 'salud-mental' ? 'bg-purple-100 text-purple-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {categoryLabels[entry.data.category] || entry.data.category}
              </span>
            </div>
            
            <!-- Title -->
            <h1 class="text-3xl lg:text-4xl font-heading font-extrabold text-primary-dark mb-4">
              {entry.data.title}
            </h1>
            
            <!-- Meta Info -->
            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 mb-6">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                {formatDate(entry.data.publishDate)}
              </div>
              
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                {entry.data.author}
              </div>
            </div>
            
            <!-- Description -->
            <p class="text-lg text-gray-600 font-body leading-relaxed">
              {entry.data.description}
            </p>
          </div>
        </div>
      </section>

      <!-- Article Content -->
      <section class="article-content py-12 bg-white">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
          <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
              
              <!-- Main Content -->
              <div class="lg:col-span-2">
                <div class="prose prose-lg max-w-none">
                  <Content />
                </div>
                
                <!-- Related Articles -->
                <div class="related-articles mt-16 pt-8 border-t border-gray-200">
                  <h3 class="text-2xl font-heading font-bold text-primary-dark mb-6">
                    Artículos Relacionados
                  </h3>
                  
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {otherPosts.map((post) => (
                      <article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                        <div class="aspect-video overflow-hidden bg-gray-100">
                          <img
                            src={post.data.featuredImage || '/images/blog/default-article.jpg'}
                            alt={post.data.title}
                            class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                            loading="lazy"
                          />
                        </div>
                        
                        <div class="p-6">
                          <!-- Category Badge -->
                          <div class="mb-3">
                            <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full ${
                              post.data.category === 'gerontologia' ? 'bg-primary/10 text-primary' :
                              post.data.category === 'nutricion' ? 'bg-green-100 text-green-800' :
                              post.data.category === 'ejercicio' ? 'bg-blue-100 text-blue-800' :
                              post.data.category === 'salud-mental' ? 'bg-purple-100 text-purple-800' :
                              'bg-gray-100 text-gray-800'
                            }`}>
                              {categoryLabels[post.data.category] || post.data.category}
                            </span>
                          </div>
                          
                          <!-- Title -->
                          <h4 class="text-xl font-heading font-bold text-primary-dark mb-3 line-clamp-2">
                            <a 
                              href={`/recursos/${post.slug}`}
                              class="hover:text-primary transition-colors duration-200"
                            >
                              {post.data.title}
                            </a>
                          </h4>
                          
                          <!-- Date -->
                          <div class="text-sm text-gray-500 mb-3">
                            {formatDate(post.data.publishDate)}
                          </div>
                          
                          <!-- Excerpt -->
                          <p class="text-gray-600 font-body mb-4 line-clamp-3">
                            {post.data.excerpt || post.data.description}
                          </p>
                          
                          <!-- Read More Link -->
                          <a 
                            href={`/recursos/${post.slug}`}
                            class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors duration-200"
                          >
                            Leer más
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                          </a>
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
                
                <!-- Tags -->
                {entry.data.tags && entry.data.tags.length > 0 && (
                  <div class="article-tags mt-12 pt-8 border-t border-gray-200">
                    <h3 class="text-lg font-heading font-bold text-primary-dark mb-4">
                      Etiquetas
                    </h3>
                    <div class="flex flex-wrap gap-2">
                      {entry.data.tags.map(tag => (
                        <span class="inline-block px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  </div>
                )}
              </div>
              
              <!-- Sidebar -->
              <div class="lg:col-span-1">
                <div class="sticky top-8 space-y-8">
                  
                  <!-- Share Buttons -->
                  <div class="share-section bg-gray-50 rounded-2xl p-6">
                    <h3 class="text-lg font-heading font-bold text-primary-dark mb-4">
                      Compartir
                    </h3>
                    <div class="space-y-3">
                      <a
                        href={shareUrls.whatsapp}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center w-full px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors duration-200"
                      >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                        </svg>
                        WhatsApp
                      </a>
                      
                      <a
                        href={shareUrls.facebook}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200"
                      >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                        Facebook
                      </a>
                      
                      <a
                        href={shareUrls.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center w-full px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors duration-200"
                      >
                        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                        LinkedIn
                      </a>
                    </div>
                  </div>
                  
                  <!-- Contact CTA -->
                  <div class="contact-cta bg-primary-light/10 rounded-2xl p-6">
                    <h3 class="text-lg font-heading font-bold text-primary-dark mb-3">
                      ¿Tienes preguntas?
                    </h3>
                    <p class="text-sm text-gray-600 mb-4">
                      Contáctame para resolver tus dudas sobre gerontología
                    </p>
                    <a
                      href={`https://wa.me/${SITE_CONFIG.contact.whatsapp.replace(/[^0-9]/g, '')}?text=Hola, leí el artículo "${entry.data.title}" y me gustaría hacer una consulta`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="btn-primary w-full text-center"
                    >
                      Contactar
                    </a>
                  </div>
                  
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </section>

    </article>
  </main>
</BaseLayout>

<script>
  // Enhanced Gallery with Touch Support and Fullscreen
  document.addEventListener('DOMContentLoaded', function() {
    const galleryTrack = document.getElementById('gallery-track');
    const prevBtn = document.getElementById('gallery-prev');
    const nextBtn = document.getElementById('gallery-next');
    const indicators = document.querySelectorAll('.gallery-indicator');
    const currentImageSpan = document.getElementById('current-image');
    
    // Fullscreen elements
    const fullscreenModal = document.getElementById('fullscreen-modal');
    const fullscreenImage = document.getElementById('fullscreen-image');
    const closeFullscreenBtn = document.getElementById('close-fullscreen');
    const fullscreenPrevBtn = document.getElementById('fullscreen-prev');
    const fullscreenNextBtn = document.getElementById('fullscreen-next');
    const fullscreenCounter = document.getElementById('fullscreen-counter');
    const galleryImages = document.querySelectorAll('.gallery-image');
    
    if (!galleryTrack) return;
    
    const totalImages = parseInt(galleryTrack.dataset.total) || 0;
    let currentIndex = 0;
    let startX = 0;
    let isDragging = false;
    
    // Update gallery display
    function updateGallery() {
      const translateX = -currentIndex * 100;
      galleryTrack.style.transform = `translateX(${translateX}%)`;
      
      // Update counter
      if (currentImageSpan) {
        currentImageSpan.textContent = currentIndex + 1;
      }
      
      // Update indicators
      indicators.forEach((indicator, index) => {
        indicator.classList.toggle('bg-white', index === currentIndex);
        indicator.classList.toggle('bg-white/60', index !== currentIndex);
      });
      
      // Update navigation buttons
      if (prevBtn) prevBtn.disabled = currentIndex === 0;
      if (nextBtn) nextBtn.disabled = currentIndex === totalImages - 1;
    }
    
    // Navigate to specific image
    function goToImage(index) {
      currentIndex = Math.max(0, Math.min(index, totalImages - 1));
      updateGallery();
    }
    
    // Navigation functions
    function nextImage() {
      if (currentIndex < totalImages - 1) {
        goToImage(currentIndex + 1);
      }
    }
    
    function prevImage() {
      if (currentIndex > 0) {
        goToImage(currentIndex - 1);
      }
    }
    
    // Button event listeners
    if (nextBtn) nextBtn.addEventListener('click', nextImage);
    if (prevBtn) prevBtn.addEventListener('click', prevImage);
    
    // Indicator event listeners
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => goToImage(index));
    });
    
    // Touch/swipe support
    galleryTrack.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
      isDragging = true;
    }, { passive: true });
    
    galleryTrack.addEventListener('touchmove', (e) => {
      if (!isDragging) return;
      e.preventDefault();
    }, { passive: false });
    
    galleryTrack.addEventListener('touchend', (e) => {
      if (!isDragging) return;
      isDragging = false;
      
      const endX = e.changedTouches[0].clientX;
      const diffX = startX - endX;
      const threshold = 50;
      
      if (Math.abs(diffX) > threshold) {
        if (diffX > 0) {
          nextImage();
        } else {
          prevImage();
        }
      }
    }, { passive: true });
    
    // Mouse drag support for desktop
    let mouseStartX = 0;
    let isMouseDragging = false;
    
    galleryTrack.addEventListener('mousedown', (e) => {
      mouseStartX = e.clientX;
      isMouseDragging = true;
      galleryTrack.style.cursor = 'grabbing';
    });
    
    galleryTrack.addEventListener('mousemove', (e) => {
      if (!isMouseDragging) return;
      e.preventDefault();
    });
    
    galleryTrack.addEventListener('mouseup', (e) => {
      if (!isMouseDragging) return;
      isMouseDragging = false;
      galleryTrack.style.cursor = 'grab';
      
      const diffX = mouseStartX - e.clientX;
      const threshold = 50;
      
      if (Math.abs(diffX) > threshold) {
        if (diffX > 0) {
          nextImage();
        } else {
          prevImage();
        }
      }
    });
    
    galleryTrack.addEventListener('mouseleave', () => {
      isMouseDragging = false;
      galleryTrack.style.cursor = 'grab';
    });
    
    // Fullscreen functionality
    function openFullscreen(imageSrc, imageAlt, imageIndex) {
      if (fullscreenModal && fullscreenImage) {
        fullscreenImage.src = imageSrc;
        fullscreenImage.alt = imageAlt;
        fullscreenModal.classList.remove('hidden');
        fullscreenModal.classList.add('flex');
        currentIndex = imageIndex;
        updateFullscreenCounter();
        document.body.style.overflow = 'hidden';
      }
    }
    
    function closeFullscreen() {
      if (fullscreenModal) {
        fullscreenModal.classList.add('hidden');
        fullscreenModal.classList.remove('flex');
        document.body.style.overflow = '';
      }
    }
    
    function updateFullscreenCounter() {
      if (fullscreenCounter) {
        fullscreenCounter.textContent = currentIndex + 1;
      }
    }
    
    function updateFullscreenImage() {
      if (fullscreenImage && galleryImages[currentIndex]) {
        const currentImg = galleryImages[currentIndex];
        fullscreenImage.src = currentImg.src;
        fullscreenImage.alt = currentImg.alt;
        updateFullscreenCounter();
      }
    }
    
    // Fullscreen navigation
    function nextFullscreenImage() {
      if (currentIndex < totalImages - 1) {
        currentIndex++;
        updateFullscreenImage();
        updateGallery();
      }
    }
    
    function prevFullscreenImage() {
      if (currentIndex > 0) {
        currentIndex--;
        updateFullscreenImage();
        updateGallery();
      }
    }
    
    // Fullscreen event listeners
    galleryImages.forEach((img, index) => {
      img.addEventListener('click', () => {
        openFullscreen(img.src, img.alt, index);
      });
    });
    
    if (closeFullscreenBtn) {
      closeFullscreenBtn.addEventListener('click', closeFullscreen);
    }
    
    if (fullscreenPrevBtn) {
      fullscreenPrevBtn.addEventListener('click', prevFullscreenImage);
    }
    
    if (fullscreenNextBtn) {
      fullscreenNextBtn.addEventListener('click', nextFullscreenImage);
    }
    
    // Close fullscreen with Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !fullscreenModal.classList.contains('hidden')) {
        closeFullscreen();
      }
      if (!fullscreenModal.classList.contains('hidden')) {
        if (e.key === 'ArrowLeft') {
          prevFullscreenImage();
        } else if (e.key === 'ArrowRight') {
          nextFullscreenImage();
        }
      }
    });
    
    // Close fullscreen when clicking outside image
    if (fullscreenModal) {
      fullscreenModal.addEventListener('click', (e) => {
        if (e.target === fullscreenModal) {
          closeFullscreen();
        }
      });
    }
    
    // Initialize gallery
    updateGallery();
    galleryTrack.style.cursor = 'grab';
  });
</script>